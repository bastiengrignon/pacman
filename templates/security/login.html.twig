{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1 class="text-center">Connexion PacMan</h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="_username" required placeholder="Nom d'utilisateur">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="_password" required placeholder="Mot de passe">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}


