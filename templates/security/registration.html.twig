{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1>Inscription d'un nouveau PacMan</h1>
    {{ form_start(formRegister) }}
    {{ form_row(formRegister.username, {'label': "Nom d'utilisateur", 'attr': {'placeholder': "Nom d'utilisateur"}}) }}
    {{ form_row(formRegister.password, {'label': "Mot de passe", 'attr': {'placeholder': "Mot de passe"}}) }}
    {{ form_row(formRegister.age, {'label': "Age", 'attr': {'placeholder': "Age"}}) }}
    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(formRegister) }}
{% endblock %}

